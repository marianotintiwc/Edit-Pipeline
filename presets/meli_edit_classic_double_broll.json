{
  "$schema": "MELI Classic Double B Roll Preset",
  "$description": "MELI Classic with endcard alpha-fill applied like b-roll (double b-roll effect)",
  "$version": "1.0",
  "$created": "2026-01-23",

  "preset_name": "MELI_CLASSIC_DOUBLE_B_ROLL",

  "clip_order": [
    {"position": 1, "type": "scene", "description": "Opening scene with talent"},
    {"position": 2, "type": "scene", "description": "Middle scene with talent"},
    {"position": 3, "type": "broll", "description": "B-roll footage (product/feature demo)"},
    {"position": 4, "type": "scene", "description": "Closing scene with talent"},
    {"position": 5, "type": "endcard", "description": "Endcard with b-roll style alpha-fill"}
  ],

  "style_overrides": {
    "_comment": "IMPORTANT: Font settings go at TOP LEVEL, not nested under 'subtitle'!",

    "font": "/app/assets/fonts/MELIPROXIMANOVAA-BOLD.OTF",
    "fontsize": 60,
    "stroke_color": "#333333",
    "stroke_width": 10,

    "highlight": {
      "color": "#333333",
      "stroke_color": "#333333",
      "stroke_width": 4
    },

    "endcard": {
      "enabled": true,
      "overlap_seconds": 0.5
    },

    "broll_alpha_fill": {
      "enabled": true,
      "blur_sigma": 60,
      "slow_factor": 1.5,
      "force_chroma_key": true,
      "chroma_key_color": "0x1F1F1F",
      "chroma_key_similarity": 0.01,
      "chroma_key_blend": 0.0,
      "edge_feather": 5,
      "auto_tune": false,
      "auto_tune_min": 0.05,
      "auto_tune_max": 0.30,
      "auto_tune_step": 0.03
    },

    "endcard_alpha_fill": {
      "enabled": true,
      "blur_sigma": 60,
      "slow_factor": 1.5,
      "force_chroma_key": true,
      "chroma_key_color": "0x1F1F1F",
      "chroma_key_similarity": 0.01,
      "chroma_key_blend": 0.0,
      "edge_feather": 5,
      "auto_tune": false,
      "auto_tune_min": 0.05,
      "auto_tune_max": 0.30,
      "auto_tune_step": 0.03
    },

    "interpolation": {
      "enabled": true,
      "target_fps": 60,
      "method": "RIFE"
    },

    "postprocess": {
      "color_grading": {
        "enabled": false
      }
    },

    "transcription": {
      "model": "large",
      "language": "auto"
    }
  },

  "audio": {
    "music_url": "random",
    "music_volume": 0.3,
    "voice_preserved": true,
    "output_codec": "aac",
    "output_bitrate": "320k"
  },

  "output": {
    "format": "mp4",
    "resolution": "1080x1920",
    "orientation": "vertical",
    "fps": 60
  }
}
